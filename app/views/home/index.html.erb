<br>
<%#= image_tag "/images/babel_full.jpg" , :class => "front_image" %>
<div id="search">
  <h1 id="tagline">Find someone to babble with!</h1>
  <%= form_tag users_path, :method => :get do %>
    <p>
      <%= label_tag :location_search, "Where are you?" %>
      <%= text_field_tag :location_search, params[:location_search] %>
      <br>
      <%= label_tag :language_search, "Which language?" %>
      <%= text_field_tag :language_search, params[:language_search] %>
      <br>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
  <%= link_to "View All Babblers", users_path %>
</div>
